<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <title>Inicio</title>
</head>
<body>
    <main class="main-container">
        <section>
            <h1>Lista de usuarios</h1>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <% users.forEach( user => { %>
                            <td><%= user.id %> </td>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td>
                                <a href="/edit/<%= user.id %>">Editar</a>
                                <a href="/delete/<%= user.id %>">Eliminar</a>
                            </td>    
                    </tr>
                        <% }); %>
                </tbody>
            </table>
        </section>

        <section>
            <!--Agregar usuario-->
            <h2>Agregar Usuario</h2>
            <form action="/add" method="post">
                <label for="name">Nombre:</label>
                <input type="text" name="name" maxlength="45" required placeholder="Ingresa el nombre">
                <label for="email">Correo:</label>
                <input type="text" name="email" id="email" maxlength="45" required placeholder="Ingresa un correo">
                <button type="submit">Registro</button>
            </form>
        </section>
    </main>

</body>
</html>